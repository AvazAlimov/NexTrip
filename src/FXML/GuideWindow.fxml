<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import java.net.URL?>
<GridPane vgap="20" alignment="CENTER" xmlns:fx="http://javafx.co/fxml/1" xmlns="http://javafx.com/javafx/2.2"
          fx:controller="Activities.GuideActivity">

    <rowConstraints>
        <RowConstraints prefHeight="20"/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints prefHeight="20"/>
    </rowConstraints>

    <HBox spacing="40" alignment="CENTER" GridPane.rowIndex="1">

        <Button fx:id="prevImage"/>

        <ImageView fitHeight="500" fitWidth="800">
            <Image fx:id="imageView" url="@../Resources/background.jpg"/>
        </ImageView>

        <Button fx:id="nextImage"/>

    </HBox>

    <Label GridPane.halignment="CENTER" text="TEXT" GridPane.rowIndex="2"/>

    <HBox alignment="CENTER" spacing="10" GridPane.rowIndex="3">
        <Button/>
        <Button/>
        <Button/>
    </HBox>

    <Button fx:id="skipButton" text="Skip" GridPane.halignment="CENTER" GridPane.rowIndex="4"/>

    <stylesheets>
        <URL value="@../CSSFiles/Guide.css"/>
    </stylesheets>

</GridPane>